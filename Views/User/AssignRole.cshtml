@model RoleAssignSendModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<input type="hidden" asp-for="@Model.UserId">
<ul class="list-group">
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <input type="hidden" asp-for="@Model.Roles[i].Name">
        <input type="hidden" asp-for="@Model.Roles[i].RoleId">
        <li class="list-group-item">
            <input class="form-check-input me-1" asp-for="@Model.Roles[i].Exits">
            <label class="form-check-label" for="firstCheckbox">@Model.Roles[i].Name</label>
        </li>
    }


</ul>

<form asp-action="AssignRole" asp-controller="User" method="post" class="p-3 shadow">
    <div class="input-group mb-3">
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
    <div class="mt-3" asp-validation-summary="ModelOnly"></div>
</form>