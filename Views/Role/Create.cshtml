@model RoleCreateModel
@{
    Layout="~/Views/Shared/_Layout.cshtml";
}
<h2 class="mt-3">Kullanıcı Oluşturma Sayfası</h2>

<form asp-action="Create" asp-controller="Role" method="post" class="p-3 shadow">
 <span class="text-danger" asp-validation-for="@Model.Name"></span>
<div class="input-group mb-3">
 
  <input class="form-control" placeholder="Username" asp-for="@Model.Name">
</div>

<div class="input-group mb-3">
 <button type="submit" class="btn btn-primary">Ekle</button>
</div>
<div class="mt-3" asp-validation-summary="ModelOnly"></div>
</form>
