@model UserSignInModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mt-3">Giriş</h2>

<form asp-action="SignIn" asp-controller="Home" method="post" class="p-3 shadow">
    <input type="hidden" asp-for="@Model.ReturnUrl">
    <div class="input-group mb-3">
          <span class="text-danger" asp-validation-for="@Model.Username"></span>
        <input class="form-control" placeholder="Username" asp-for="@Model.Username">
    </div>
    
    <div class="input-group mb-3">
        <input type="password" class="form-control" placeholder="Şifre" asp-for="@Model.Password">
    </div>
    <div class="input-group mb-3">
        <button type="submit" class="btn btn-primary">Giriş</button>
    </div>
    <div class="form-check">
  <input class="form-check-input" type="checkbox" asp-for="@Model.RememberMe">
  <label class="form-check-label" for="RemeberMe">
    Beni Hatırla
  </label>
</div>
    <div class="mt-3" asp-validation-summary="ModelOnly"></div>
</form>